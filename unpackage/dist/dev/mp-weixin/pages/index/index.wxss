.content swiper {
  width: 750rpx;
  height: 380rpx;
}
.content swiper image {
  height: 100%;
  width: 100%;
}
.hot_goods {
  background-color: #eee;
  overflow: hidden;
  margin-top: 4px;
}
.hot_goods .title {
  height: 50px;
  line-height: 50px;
  color: #339d48;
  text-align: center;
  letter-spacing: 22px;
  background-color: #fff;
  margin: 6rpx 0px;
}
.hot_goods .goodsList {
  padding: 0 15rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.hot_goods .goodsList .type {
  width: 100%;
  background-color: #339d48;
  padding-left: 10rpx;
  color: #fff;
}
.hot_goods .goodsList .type navigator {
  float: right;
  font-size: 28rpx;
  margin-top: 4px;
  text-decoration: underline;
}
.hot_goods .goodsList .goodsItem {
  background-color: #fff;
  margin: 6px 0;
  width: 355rpx;
  box-sizing: border-box;
}
.hot_goods .goodsList .goodsItem image {
  width: 80%;
  height: 150px;
  display: block;
  margin: 0 auto;
}
.hot_goods .goodsList .goodsItem .msg {
  color: #DA260E;
  font-size: 36rpx;
  padding: 6rpx;
}
.hot_goods .goodsList .goodsItem .msg text:nth-child(2) {
  color: #9e9e9e;
  font-size: 32rpx;
}
.hot_goods .goodsList .goodsItem .name {
  font-size: 32rpx;
}

